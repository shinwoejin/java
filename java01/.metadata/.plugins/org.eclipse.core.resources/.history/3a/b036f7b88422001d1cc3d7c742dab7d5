package kr.brains03;

public class Car {
	// 2개의 인스턴스 멤버 변수, 4개의 인스턴스 메소드
	String model;
	private int gas;
	// Setter/Getter Method;
	void setGas(int gas) { // 가스를 주입한 결과
		this.gas = gas;
	}
	
	int getGas() { // public을 달면 다른 패키지에서도 사용가능
		return gas;
	}
	
	/*boolean isLeftGas() {
		if(gas == 0) {
			return false;
		} else {
			return true;
		}
	}*/
	
	boolean isLeftGas() {
		boolean isLeft = true;
		if(gas == 0) {
			System.out.print("gas가 없습니다\n");
			isLeft = false;
		}
		else
			System.out.print("gas가 있습니다\n");
		return isLeft;
	}
	
}
